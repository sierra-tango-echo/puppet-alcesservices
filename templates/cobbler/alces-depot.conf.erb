  #
  # Alces RPM Depot
  #

  Alias /alces/repo /opt/alces/depot

  <Location /alces/repo>
    Options +Indexes
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
    Allow from <%=scope.lookupvar('alcesnetwork::network::primary_network')%>/<%=scope.lookupvar('alcesnetwork::network::primary_netmask')%>
    Allow from <%=scope.lookupvar('alcesnetwork::network::secure_network')%>/<%=scope.lookupvar('alcesnetwork::network::secure_netmask')%>
  </Location>
