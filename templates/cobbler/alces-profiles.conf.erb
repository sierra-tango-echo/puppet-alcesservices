  #
  # Alces Build Profiles
  #

  Alias /alces/profiles /var/lib/alces/clusterware/etc/profiles/

  <Location /alces/profiles>
    Options +Indexes
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
    Allow from <%=scope.lookupvar('alcesnetwork::network::primary_network')%>/<%=scope.lookupvar('alcesnetwork::network::primary_netmask')%>
  </Location>
